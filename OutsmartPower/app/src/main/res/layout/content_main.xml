<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#e0e0e0">
    <!--
    tools:showIn="@layout/app_bar_main"
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wifiListFragmentContainer"></FrameLayout>
-->
    <TextView
        android:id="@+id/deviceNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="@dimen/welcomeOutsmartDevices"
        android:text="--"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceNameTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginRight="183dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="210dp"
        android:id="@+id/outlet1Layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tglbtn_OffOn1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toggleHeight"

                android:text="ToggleButton" />

            <TextView
                android:id="@+id/tv_power1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/currentDisplay"
                android:paddingTop="10dp"
                android:text="--"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_more_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statDim"
                android:layout_marginBottom="@dimen/powerLayoutMargin"
                android:text="Statistics" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/outlet2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceNameTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginLeft="183dp"
        android:layout_marginStart="183dp"
        android:layout_marginBottom="210dp"
        android:paddingLeft="@dimen/layout_padding"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tglbtn_OffOn2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toggleHeight"
                android:text="ToggleButton" />

            <TextView
                android:id="@+id/tv_power2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/currentDisplay"
                android:paddingTop="10dp"
                android:text="--"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_more_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statDim"
                android:text="Statistics" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceNameTV"

        android:layout_marginRight="183dp"
        android:layout_marginEnd="183dp"
        android:layout_marginTop="210dp"
        android:id="@+id/outlet3Layout"
        android:paddingRight="@dimen/layout_padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tglbtn_OffOn3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toggleHeight"

                android:layout_marginTop="@dimen/powerLayoutMargin"
                android:text="ToggleButton" />

            <TextView
                android:id="@+id/tv_power3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/currentDisplay"
                android:paddingTop="10dp"
                android:text="--"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_more_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statDim"
                android:text="Statistics" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/outlet4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceNameTV"
        android:layout_marginLeft="183dp"
        android:layout_marginStart="183dp"
        android:layout_marginTop="210dp"
        android:paddingLeft="@dimen/layout_padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tglbtn_OffOn4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toggleHeight"
                android:layout_marginTop="@dimen/powerLayoutMargin"
                android:text="ToggleButton" />

            <TextView
                android:id="@+id/tv_power4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/currentDisplay"
                android:paddingTop="10dp"
                android:text="--"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_more_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statDim"
                android:text="Statistics" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
